<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#d50000" />
            <gradient android:angle="-90" android:startColor="#b71c1c" android:endColor="#d50000"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#b71c1c" />
            <gradient android:angle="-90" android:startColor="#d50000" android:endColor="#b71c1c" />
        </shape>
    </item>
</selector>