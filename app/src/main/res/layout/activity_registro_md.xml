<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro_md"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.activities.PruebasDanny.Registro">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/telefono_md_registro"
        android:layout_below="@+id/fecha_md_registro"
        android:layout_alignParentStart="true"
        android:hint="Telefono" />

    <Button
        android:text="CANCELAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefono_md_registro"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:id="@+id/cancelar_md_registro" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/email_md_registro"
        android:layout_below="@+id/nombre_md_registro"
        android:layout_alignParentStart="true"
        android:hint="E-mail" />



    <Button
        android:text="ACEPTAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:id="@+id/aceptar_md_regsitro"
        android:layout_alignBaseline="@+id/cancelar_md_registro"
        android:layout_alignBottom="@+id/cancelar_md_registro"
        android:layout_toEndOf="@+id/cancelar_md_registro" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombre_md_registro"
        android:hint="Nombre"
        android:layout_below="@+id/imageBtn_md_registro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/password_md_registro"
        android:layout_below="@+id/email_md_registro"
        android:layout_centerHorizontal="true"
        android:hint="Introduzca la contrasena" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2_md_registro"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/password_md_registro"
        android:layout_alignParentStart="true"
        android:hint="Repite la contrasena" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/fecha_md_registro"
        android:hint="Fecha de Nacimiento"
        android:layout_below="@+id/password2_md_registro"
        android:layout_alignParentStart="true" />

    <ImageButton
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/imageBtn_md_registro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
