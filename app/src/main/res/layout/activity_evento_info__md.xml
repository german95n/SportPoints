<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_evento_info__md"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.activities.PruebasDanny.EventoInfo_MD">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="325dp"
        android:id="@+id/cardView_evento_md" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
                android:id="@+id/evento_info_img"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="180dp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/evento_info_img">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:id="@+id/nombre_evento_info_md"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre_evento_info_md"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="52dp"
                    android:id="@+id/lugar_evento_info_md"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hora_evento_info_md"
                    android:layout_below="@+id/fecha_evento_info_md"
                    android:layout_alignStart="@+id/lugar_evento_info_md" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha_evento_info_md"
                    android:layout_marginTop="19dp"
                    android:layout_below="@+id/nombre_evento_info_md"
                    android:layout_alignStart="@+id/hora_evento_info_md" />
                <Button
                    android:text="VER PARTICIPANTES"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hora_evento_info_md"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btn_evento_info_md"
                    android:layout_marginStart="50dp"/>




            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cardView_evento_md"
        android:layout_alignParentStart="true"
        android:layout_height="275dp"
        android:id="@+id/cardView_descripcion_evento_md" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="DESCRIPCION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_descripcion"
                android:layout_marginStart="20dp"
                android:paddingTop="10dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/descripcion_evento_info_md"
                android:layout_below="@id/textView_descripcion" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
