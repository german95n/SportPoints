<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deportes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.activities.Deportes">

    <TextView
        android:text="EMAIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/email_txt"
        android:layout_centerHorizontal="true"
        android:id="@+id/email_field"
        android:hint="pepe@gmail.com"
        android:textSize="18sp" />

    <TextView
        android:text="CONTRASEÑA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/contrasenya1_txt"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/contrasenya1_txt"
        android:layout_centerHorizontal="true"
        android:id="@+id/contrasenya1_field"
        android:textSize="18sp" />

    <TextView
        android:text="VUELVA A REPETIR LA CONTRASEÑA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contrasenya1_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/contrasenya2_txt"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/contrasenya2_txt"
        android:layout_centerHorizontal="true"
        android:id="@+id/contrasenya2_field"
        android:textSize="18sp" />

    <TextView
        android:text="QUE DEPORTES PRACTICA?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/deportes_txt"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <CheckBox
        android:text="Futbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deportes_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/futbol_checkbox"
        android:textSize="18sp" />

    <CheckBox
        android:text="Baloncesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/futbol_checkbox"
        android:layout_alignParentStart="true"
        android:id="@+id/baloncesto_checkbox"
        android:textSize="18sp" />

    <CheckBox
        android:text="Tenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baloncesto_checkbox"
        android:layout_centerHorizontal="true"
        android:id="@+id/tenis_checkbox"
        android:textSize="18sp" />

    <Button
        android:text="Finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/fin_btn"
        android:textSize="18sp" />

    <Button
        android:text="ATRAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fin_btn"
        android:layout_toStartOf="@+id/fin_btn"
        android:id="@+id/atras_btn_2"
        android:textSize="18sp" />

</RelativeLayout>
