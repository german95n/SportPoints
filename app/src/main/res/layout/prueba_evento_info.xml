        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="HORA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/horaTextView"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lugarTextView"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textSize="17sp"
        android:layout_alignStart="@+id/fechaTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fechaTextView"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/textView7" />

        <Button
            android:text="Ver participantes"
            android:id="@+id/verP_id"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/participantesTextView"
            android:layout_alignBottom="@+id/participantesTextView"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="125dp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/descripcionTextView"
            android:layout_height="220dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
        android:text="UNIRSE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joinBtn"
        android:elevation="0dp"
        android:textStyle="normal|bold"
            android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

